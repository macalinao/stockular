{
  "manifest_version": 2,

  "name": "Bloomberg Chrome Extension",
  "description": "This extension provides financial details behind stock tickers.",
  "version": "1.0",
  "content_scripts": [{
    "css": ["style.css"],
    "js": ["jquery.min.js", "highlight.min.js", "highstock.js", "exporting.js", "ext.js", "bootstrap.min.js"],
    "matches": ["http://*/*", "https://*/*"],
    "run_at": "document_end"
  }],
  "permissions": [
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  }
}

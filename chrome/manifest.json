{
  "manifest_version": 2,

  "name": "Bloomberg Chrome Extension",
  "description": "This extension provides financial details behind stock tickers.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts" : [
	{
	"matches": ["http://*/*"],
	"js": ["filter.js"],
	"run_at": "document_end",
	"all_frames": true
	}
  "permissions": [
    "https://bloomberglabs.com"
  ],
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"]
  }]
}
